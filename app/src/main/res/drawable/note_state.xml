<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Non focused states -->
    <item android:drawable="@drawable/music_note" android:state_focused="false" android:state_pressed="false" android:state_selected="false" />

    <item android:drawable="@drawable/selected_note" android:state_focused="false" android:state_pressed="false" android:state_selected="true" />
    <!-- Focused states -->
    <item android:drawable="@drawable/selected_note" android:state_focused="true" android:state_pressed="false" android:state_selected="false" />
    <item android:drawable="@drawable/selected_note" android:state_focused="true" android:state_pressed="false" android:state_selected="true" />

    <!-- Pressed -->
    <!--<item android:state_selected="true" android:state_pressed="true" android:drawable="@drawable/selected_note" />-->
    <item android:drawable="@drawable/selected_note" android:state_pressed="true" />
</selector>